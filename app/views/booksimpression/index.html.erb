<h1>Books</h1>


<table width="60%">

    <tr align="center">
      <th width="20%">Title</th>
      <th width="65%">Body</th>
    </tr>


　　<% @books.each do |book| %>
     <tr align="left">
       <th width="20%"><%= book.title %></th>
       <th width="65%"><%= book.body %></th>
       <th width="5%">
       	<span>
         <%=link_to "Show", book_path(book.id) %>
        </span>
       </th>

      <th width="5%">
       	<span>
         <%=link_to "Edit", edit_book_path(book.id) %>
        </span>
       </th>

       <th width="5%">
       	<span>
         <%=link_to "Destroy", destroy_book_path(book.id), method: :delete,"data-confirm" => "本当に削除しますか？" %>
        </span>
       </th>
      </tr>
    <% end %>

</table>



<h3>New book</h3>

<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>error prohibited this book from being saved: <br>
    <% @book.errors.full_messages.each do |message| %>
    <ul>
      <li><%= message %></li>
    </ul>
    <% end %>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>





